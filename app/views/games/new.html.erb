<h1 class="d-flex justify-content-center ">Le mot le plus long !!!!</h1>

<div class="container" >
  <div class= "d-flex justify-content-between">
  <%@letters.each do |letter| %>
    <div class="bg-light fs-1 mt-5 text-danger fw-bold"><%=letter %></div>
  <% end %>
  </div>

  <div>
    <form action="/score" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters%>
      <div class="mt-5">
        <label for="longword" class="form-label">What's the longest Word you can find ??</label>
          <div class="d-flex">
        <input type="text" name="word" class="form-control" id=longword">
        <button type="submit" class="btn btn-primary">Play</button>
          </div>
      </div>
    </form>
  </div>
</div>
<%= console %>
